<UserControl 
    x:Class="CourseProjectOpp.AdminProductsChangingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CourseProjectOpp"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">

    <UserControl.Resources>
        <ObjectDataProvider 
            x:Key="productTypeValues"
            MethodName="GetValues" ObjectType="{x:Type System:Enum}">

            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:ProductType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*" />
            <RowDefinition Height="131*" />
            <RowDefinition Height="230*" />
            <RowDefinition Height="33*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="102*" />
            <ColumnDefinition Width="635*" />
            <ColumnDefinition Width="63*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="2"
            Grid.Row="3"
            Command="{Binding CancelCommand}"
            Content="Cancel" />

        <Button
            Grid.Column="1"
            Grid.Row="3"
            Command="{Binding SaveChangesCommand}"
            Content="Save changes"/>

        <DataGrid
            Grid.Row="1"
            Grid.Column="1"
            ScrollViewer.CanContentScroll="False"
            ItemsSource="{Binding Types, Mode=TwoWay}"
            AutoGenerateColumns="False" 
            CanUserAddRows="False"
            CanUserDeleteRows="False" 
            CanUserReorderColumns="False" 
            CanUserResizeColumns="False"
            CanUserResizeRows="False" 
            CanUserSortColumns="False" 
            SelectionMode="Single">

            <DataGrid.Resources>
                <DataTemplate x:Key="DiscountTemplate" >
                    <xctk:IntegerUpDown                                                                
                        Value="{Binding Discount, Mode=TwoWay}"
                        Minimum="0"
                        Maximum="100"
                        ValueChanged="IntegerUpDown_ValueChanged"/>

                </DataTemplate>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Name" 
                    Binding="{Binding Name}"/>

                <DataGridTemplateColumn 
                    Header="Discount" 
                    CellTemplate="{StaticResource DiscountTemplate}" />

            </DataGrid.Columns>



        </DataGrid>

        <DataGrid
            ScrollViewer.CanContentScroll="False" 
            Grid.Row="2"
            Grid.Column="1"
            ItemsSource="{Binding Products, Mode=TwoWay}"
            AutoGenerateColumns="False" 
            CanUserAddRows="False"
            CanUserDeleteRows="False" 
            CanUserReorderColumns="False" 
            CanUserResizeColumns="False"
            CanUserResizeRows="False" 
            CanUserSortColumns="False" 
            SelectionMode="Single">

            <DataGrid.Resources>
                
                <DataTemplate x:Key="ImageTemplate" >
                    <StackPanel>
                        <Image 
                            Width="100" 
                            Height="100"
                            Source="{Binding ImagePath}"/>

                        <TextBlock 
                            Text="{Binding ImagePath}" 
                            FontSize="8" 
                            FontWeight="Bold" 
                            HorizontalAlignment="Center" />

                        <Button
                            Click="btnOpen_Click" />

                    </StackPanel>
                </DataTemplate>

                <DataTemplate x:Key="PriceTemplate" >
                    <xctk:IntegerUpDown                                                                
                        Value="{Binding Price, Mode=TwoWay}"
                        Minimum="0"
                        Maximum="100"
                        ValueChanged="IntegerUpDown_ValueChanged"/>

                </DataTemplate>
                
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Name" 
                    Binding="{Binding Name}"/>

                <DataGridTextColumn 
                    Header="Description" 
                    Binding="{Binding Description}"/>

                <DataGridTemplateColumn
                    Header="Price"
                    CellTemplate="{StaticResource PriceTemplate}" />

                <DataGridTemplateColumn 
                    Header="Image" 
                    CellTemplate="{StaticResource ImageTemplate}" />

                <DataGridComboBoxColumn
                    Header="Type"
                    SelectedItemBinding="{Binding Type}"
                    ItemsSource="{Binding Source={StaticResource productTypeValues}}" />


            </DataGrid.Columns>

        </DataGrid>



    </Grid>
</UserControl>
